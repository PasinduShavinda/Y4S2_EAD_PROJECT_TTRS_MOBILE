<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" /> <!-- Adjust the radius as needed for the desired roundness -->
            <solid android:color="@color/light_gray" /> <!-- Set the desired background color here -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" /> <!-- Match the radius with the background shape -->
            <stroke android:width="1dp" android:color="@color/black" />
        </shape>
    </item>
</layer-list>
