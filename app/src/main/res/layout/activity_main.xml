<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_userProfile"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:text="@string/btn_userProfile"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btn_logins"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_below="@+id/btn_userProfile"
        android:layout_centerHorizontal="true"
        android:text="@string/login"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_send_req"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_below="@+id/btn_logins"
        android:layout_centerHorizontal="true"
        android:text="SEND REQUEST ACTIVE"
        android:layout_marginTop="16dp" />

</RelativeLayout>
