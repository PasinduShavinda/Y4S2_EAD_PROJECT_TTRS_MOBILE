<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_userProfile"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:text="@string/btn_userProfile"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btn_reservation_Search"
        android:layout_width="210dp"
        android:layout_height="51dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="156dp"
        android:text=" Create Reservation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_my_reservations"
        android:layout_width="196dp"
        android:layout_height="61dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="56dp"
        android:text="My Reservations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reservation_Search" />


        android:id="@+id/btn_logins"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_below="@+id/btn_userProfile"
        android:layout_centerHorizontal="true"
        android:text="@string/login"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_send_req"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_below="@+id/btn_logins"
        android:layout_centerHorizontal="true"
        android:text="SEND REQUEST ACTIVE"
        android:layout_marginTop="16dp" />

</RelativeLayout>
