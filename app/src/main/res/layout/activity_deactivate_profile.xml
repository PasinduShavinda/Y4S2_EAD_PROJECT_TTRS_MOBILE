<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/confirmNicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Enter NIC to Confirm"
        android:textColor="#333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nicEditText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirmNicTitle"
        android:layout_marginTop="20dp"
        android:hint="National Identity Card (NIC)"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nicEditText"
        android:layout_marginTop="20dp"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:background="#007ACC"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
